<Window x:Class="Snakey.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Snakey"
        mc:Ignorable="d"
        Title="Snakey snakey" SizeToContent="WidthAndHeight">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Name="ScoreLabel" Content="Score: 0"></Label>
        </StackPanel>
        <Border BorderBrush="Green" BorderThickness="5">
            <Canvas Name="GameArea" ClipToBounds="True" Width="800" Height="600" Background="Beige">
            </Canvas>
        </Border>
    </StackPanel>
</Window>
